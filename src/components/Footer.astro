---
const currentYear = new Date().getFullYear();

const footerLinks = [
  { href: '/', label: 'Work' },
  { href: '/about', label: 'About' },
  { href: '/blog', label: 'Blog' },
  { href: '/contact', label: 'Contact' },
];

const socialLinks = [
  { 
    href: 'https://www.linkedin.com/in/travisbsmithux/', 
    label: 'LinkedIn',
  },
  { 
    href: 'mailto:hello@fully-operational.com', 
    label: 'Email',
  },
];
---

<footer class="footer">
  <div class="container">
    <div class="footer__grid">
      <div class="footer__brand">
        <a href="/" class="footer__logo">Travis Smith</a>
        <p class="footer__tagline">Design Leader · Kansas City</p>
      </div>
      
      <nav class="footer__nav" aria-label="Footer">
        <span class="label footer__label">Navigation</span>
        <ul class="footer__list">
          {footerLinks.map((link) => (
            <li>
              <a href={link.href} class="footer__link">{link.label}</a>
            </li>
          ))}
        </ul>
      </nav>
      
      <div class="footer__social">
        <span class="label footer__label">Connect</span>
        <ul class="footer__list">
          {socialLinks.map((link) => (
            <li>
              <a href={link.href} class="footer__link" target={link.href.startsWith('http') ? '_blank' : undefined} rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}>
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <div class="footer__bottom">
      <p class="footer__copyright">© {currentYear} Travis Smith</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--color-border);
    padding: var(--space-16) 0 var(--space-8);
    margin-top: var(--space-24);
  }
  
  .footer__grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: var(--space-12);
    padding-bottom: var(--space-12);
    border-bottom: 1px solid var(--color-border);
  }
  
  .footer__logo {
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-2);
    display: inline-block;
  }
  
  .footer__logo:hover {
    color: var(--color-accent);
  }
  
  .footer__tagline {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
  }
  
  .footer__label {
    display: block;
    margin-bottom: var(--space-4);
  }
  
  .footer__list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }
  
  .footer__link {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    transition: color var(--duration-fast) var(--ease);
  }
  
  .footer__link:hover {
    color: var(--color-text);
  }
  
  .footer__bottom {
    padding-top: var(--space-8);
  }
  
  .footer__copyright {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .footer__grid {
      grid-template-columns: 1fr 1fr;
    }
    
    .footer__brand {
      grid-column: 1 / -1;
    }
  }
  
  @media (max-width: 480px) {
    .footer__grid {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }
  }
</style>
