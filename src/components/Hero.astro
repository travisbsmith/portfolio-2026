---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<section class="hero">
  <div class="container">
    <div class="hero__content">
      <h1 class="hero__title" set:html={title} />
      
      {subtitle && (
        <p class="hero__subtitle">{subtitle}</p>
      )}
      
      <div class="hero__actions">
        <slot />
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: calc(64px + var(--space-20)) 0 var(--space-16);
    height: 951px;
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }
  
  .hero__content {
    max-width: 800px;
  }
  
  .hero__title {
    font-size: clamp(2.5rem, 6vw, var(--text-6xl));
    font-weight: 500;
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin-bottom: var(--space-8);
  }
  
  .hero__title :global(em) {
    font-style: normal;
    color: var(--color-accent);
  }
  
  .hero__subtitle {
    font-size: var(--text-lg);
    line-height: 1.7;
    color: var(--color-text-secondary);
    max-width: 560px;
    margin-bottom: var(--space-10);
  }
  
  .hero__actions {
    display: flex;
    gap: var(--space-4);
    flex-wrap: wrap;
  }
  
  @media (max-width: 640px) {
    .hero {
      min-height: auto;
      padding-top: calc(64px + var(--space-12));
      padding-bottom: var(--space-12);
    }
    
    .hero__subtitle {
      font-size: var(--text-base);
    }
  }
</style>
