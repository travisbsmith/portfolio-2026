---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  const workEntries = await getCollection('work');
  return workEntries.map(entry => ({
    params: { slug: entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);

// Get adjacent projects for navigation
const allWork = await getCollection('work');
const sortedWork = allWork.sort((a, b) => a.data.order - b.data.order);
const currentIndex = sortedWork.findIndex(w => w.id === entry.id);
const prevWork = currentIndex > 0 ? sortedWork[currentIndex - 1] : null;
const nextWork = currentIndex < sortedWork.length - 1 ? sortedWork[currentIndex + 1] : null;
---

<BaseLayout 
  title={`${entry.data.title} - ${entry.data.company} | Travis Smith`}
  description={entry.data.description}
  image={entry.data.image}
>
  <Navigation />
  
  <main class="work-detail">
    <article>
      <header class="work-header container">
        <a href="/" class="back-link">← Back to Work</a>
        
        <span class="label">{entry.data.company}</span>
        <h1 class="work-title">{entry.data.title}</h1>
        <p class="work-description">{entry.data.description}</p>
        
        {entry.data.tags && entry.data.tags.length > 0 && (
          <div class="work-tags">
            {entry.data.tags.map((tag: string) => (
              <span class="work-tag">{tag}</span>
            ))}
          </div>
        )}
      </header>
      
      <div class="work-hero">
        <img src={entry.data.image} alt={`${entry.data.title}`} />
      </div>
      
      <div class="work-content container container--narrow">
        <Content />
      </div>
    </article>
    
    <nav class="work-nav" aria-label="Project navigation">
      <div class="container">
        <div class="work-nav__grid">
          {prevWork && (
            <a href={`/work/${prevWork.id}`} class="work-nav__link">
              <span class="work-nav__label">Previous</span>
              <span class="work-nav__title">← {prevWork.data.company}</span>
            </a>
          )}
          
          {nextWork && (
            <a href={`/work/${nextWork.id}`} class="work-nav__link work-nav__link--next">
              <span class="work-nav__label">Next</span>
              <span class="work-nav__title">{nextWork.data.company} →</span>
            </a>
          )}
        </div>
      </div>
    </nav>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .work-detail {
    padding-top: 64px;
  }
  
  /* Header */
  .work-header {
    padding: var(--space-12) var(--gutter) var(--space-10);
    max-width: var(--content-width);
  }
  
  .back-link {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
    margin-bottom: var(--space-8);
    transition: color var(--duration-fast) var(--ease);
  }
  
  .back-link:hover {
    color: var(--color-text);
  }
  
  .work-header .label {
    display: block;
    margin-bottom: var(--space-3);
  }
  
  .work-title {
    font-size: var(--text-4xl);
    font-weight: 500;
    margin-bottom: var(--space-4);
  }
  
  .work-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-6);
    max-width: 560px;
  }
  
  .work-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }
  
  .work-tag {
    font-family: var(--font-mono);
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-tertiary);
    padding: var(--space-1) var(--space-2);
    background: var(--color-surface);
  }
  
  /* Hero Image */
  .work-hero {
    margin-bottom: var(--space-16);
    padding: 0 var(--gutter);
  }
  
  .work-hero img {
    width: 100%;
    height: auto;
  }
  
  /* Content */
  .work-content {
    padding-bottom: var(--space-20);
  }
  
  .work-content :global(h2) {
    font-size: var(--text-2xl);
    font-weight: 500;
    margin-top: var(--space-12);
    margin-bottom: var(--space-4);
  }
  
  .work-content :global(h2:first-child) {
    margin-top: 0;
  }
  
  .work-content :global(h3) {
    font-size: var(--text-xl);
    font-weight: 500;
    margin-top: var(--space-8);
    margin-bottom: var(--space-3);
  }
  
  .work-content :global(p) {
    font-size: var(--text-base);
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-4);
  }
  
  .work-content :global(ul),
  .work-content :global(ol) {
    font-size: var(--text-base);
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-4);
    padding-left: var(--space-6);
  }
  
  .work-content :global(li) {
    margin-bottom: var(--space-2);
  }
  
  .work-content :global(strong) {
    color: var(--color-text);
    font-weight: 600;
  }
  
  .work-content :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  
  .work-content :global(blockquote) {
    border-left: 2px solid var(--color-border-strong);
    padding-left: var(--space-6);
    margin: var(--space-6) 0;
    color: var(--color-text-secondary);
  }
  
  .work-content :global(img) {
    width: 100vw;
    max-width: 100vw;
    margin-left: calc(-50vw + 50%);
    margin-right: calc(-50vw + 50%);
    margin-top: var(--space-8);
    margin-bottom: var(--space-8);
    display: block;
  }
  
  .work-content :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: var(--space-12) 0;
  }
  
  /* Navigation */
  .work-nav {
    border-top: 1px solid var(--color-border);
    padding: var(--space-8) 0;
  }
  
  .work-nav__grid {
    display: flex;
    justify-content: space-between;
    gap: var(--space-6);
  }
  
  .work-nav__link {
    display: block;
    transition: opacity var(--duration-fast) var(--ease);
  }
  
  .work-nav__link:hover {
    opacity: 0.6;
  }
  
  .work-nav__link--next {
    text-align: right;
    margin-left: auto;
  }
  
  .work-nav__label {
    display: block;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-1);
  }
  
  .work-nav__title {
    font-size: var(--text-base);
    color: var(--color-text);
  }
  
  @media (max-width: 640px) {
    .work-nav__grid {
      flex-direction: column;
    }
    
    .work-nav__link--next {
      text-align: left;
    }
  }
</style>
